<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".WriterFragment">

    <ImageView
        android:id="@+id/imageWriter_Fragment"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_margin="16dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewWriterFIO_Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/imageWriter_Fragment"
        app:layout_constraintStart_toStartOf="@+id/imageWriter_Fragment"
        app:layout_constraintTop_toBottomOf="@+id/imageWriter_Fragment" />

    <TextView
        android:id="@+id/textViewWriterBirthday_Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textViewWriterFIO_Fragment"
        app:layout_constraintStart_toStartOf="@+id/textViewWriterFIO_Fragment"
        app:layout_constraintTop_toBottomOf="@+id/textViewWriterFIO_Fragment" />

    <TextView
        android:id="@+id/textViewWriterDeathday_Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textViewWriterBirthday_Fragment"
        app:layout_constraintStart_toStartOf="@+id/textViewWriterBirthday_Fragment"
        app:layout_constraintTop_toBottomOf="@+id/textViewWriterBirthday_Fragment" />

    <TextView
        android:id="@+id/textViewDescription_Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/textViewWriterDeathday_Fragment"
        app:layout_constraintStart_toStartOf="@+id/textViewWriterDeathday_Fragment"
        app:layout_constraintTop_toBottomOf="@+id/textViewWriterDeathday_Fragment" />
</androidx.constraintlayout.widget.ConstraintLayout>